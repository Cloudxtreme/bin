#!/bin/bash
screenshot='screenshot';
nano=`date '+%d-%m-%y-%N'`;
extension='.png';
file="$HOME/$screenshot-$nano$extension";
sleep 1; scrot -s -b -q 50 $file;
curl -# -F "image"=@"$file" -F "key"="75670950fcce02a80d17f30cf3612eb4" http://imgur.com/api/upload.xml|\
      	
      grep -Eo 'http[^<]*.png'|sed 's/^<.\|_./\U&/g;'|xclip && xclip -o |xclip -selection c && notify-send 'DONE!' '(^.^)' --icon=dialog-information 

     
      exit 0



