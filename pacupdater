#!/usr/bin/bash
# pacman update
echo ":: updating system..."
echo "sudo pacman -Syyu"
sudo pacman -Syu
echo " "
echo ":: update complete..."
echo " "
sleep 2s
echo ":: this window will automatically close after 5 minutes"
echo ":: ctrl+c to manually exit"
notify-send "Pacman" \
            "Update complete" \
            -i $HOME/.icons/pacman_icon_48x48.png
            
   
sleep 5m
exit