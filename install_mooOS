#!/bin/sh
# Install mooOS

do_sudo=
PWD=$(pwd)

## root script
if [ $(id -u) -ne 0 ]; then
   do_sudo="sudo "
fi

# Main Program 
# Welcome the user, allow for early exit if not interested
dialog --title "mooOS Installer" --yesno "Welcome to mooOS Installer..  \nContinue?" 10 30

# If the user decided to continue, moo
if [[ $? -ne 1 ]]; then
	cd /home/moo/Github/
	rm -rf mooOS-dev-tools/
	git clone git://github.com/idk/mooOS-dev-tools.git
	if [ -d "/home/moo/Github/mooOS-dev-tools" ]; then
		chmod +x /home/moo/Github/mooOS-dev-tools/installer/installer.sh
	 	$do_sudo/home/moo/Github/mooOS-dev-tools/installer/installer.sh
	else
		echo ""
		echo "Please wait a minute while the network is automatically configured..."
		sleep 10s
	fi
fi

cd $PWD

exit 0
